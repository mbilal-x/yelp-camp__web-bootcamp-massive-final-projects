<%- layout('./layouts/boilerplate') %>

<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validatedForm">
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" for="title" >Title</label>
        <input class="col form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" for="description">Description</label>
        <input class="col form-control" type="text" name="campground[description]" id="description" value="<%= campground.description %>" required>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" for="imageUrl">Image Url</label>
        <input class="col form-control" type="text" name="campground[imageUrl]" id="imageUrl" value="<%= campground.imageUrl %>" required>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" for="location">Location</label>
        <input class="col form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" required>
    </div>
    <div class="input-group mb-3">
        <label class="col-sm-2 form-label" for="price">Price</label>
        <span class="input-group-text">$</span>
        <input class="form-control" type="text" name="campground[price]" id="price" value="<%= campground.price %>" required>
    </div>
    <button class="btn btn-primary" type="submit">Edit</button>
    <a class="btn btn-primary" href="/campgrounds">Back to index</a>

</form>
